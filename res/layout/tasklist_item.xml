<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:layout_height="fill_parent"
  android:paddingRight="7dip"
  android:paddingBottom="10dip"
  android:paddingTop="3dip"
  android:layout_marginLeft="5dip"
  android:layout_marginRight="5dip"
  style="@style/listItemStyle">

	<ImageView 
		android:id="@+id/taskStatus"
		android:layout_height="32dip"
		android:layout_width="32dip"
		android:padding="3dip"
    	android:layout_marginLeft="7dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginRight="8dip"
    	android:layout_marginBottom="15dip"
		android:src="@drawable/location_icon"/>
    
    <TextView 
		android:id="@+id/taskText"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_toRightOf="@+id/taskStatus"
		android:textAppearance="@style/TaskTextViewStyle"
		android:layout_alignParentTop="true"/>
				
	<TextView
		android:id="@+id/taskLoc"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:ellipsize="none"
      	android:singleLine="false"
      	android:scrollHorizontally="false"
      	android:layout_toRightOf="@id/taskStatus"
      	android:layout_below="@id/taskText"
      	style="@style/TaskLocViewStyle"/>
     
     <ImageView 
     	android:id="@+id/taskStatusImage"
     	android:layout_height="wrap_content"
     	android:layout_width="wrap_content"
     	android:paddingRight="15dip"
     	android:paddingTop="15dip"
     	android:layout_alignParentBottom="true"
     	android:layout_alignParentRight="true"
     	android:src="@drawable/taskwait"
     	android:visibility="visible"/>
		
</RelativeLayout>
